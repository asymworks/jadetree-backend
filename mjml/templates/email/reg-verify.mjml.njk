{% extends "tmpl/_reg.mjml.njk" %}
{% block preview %}Confirm your email address for Jade Tree{% endblock %}

{% block body_header %}Please confirm your email{% endblock body_header %}
{% block body_content %}
<mj-text>Please validate your email address in order to get started using Jade Tree.</mj-text>
<mj-button background-color="#2F67F6" color="#fff" font-size="15px" font-family="'Helvetica Neue',Arial,sans-serif" inner-padding="15px 25px" href="{% raw %}{{ frontend_url('reg_confirm', token=confirm_token) }}{% endraw %}">Confirm your Email</mj-button>
<mj-text align="left">
  Or confirm by visiting <a href="{% raw %}{{ frontend_url('reg_confirm', token=confirm_token) }}{% endraw %}">{% raw %}{{ frontend_url('reg_confirm') }}{% endraw %}</a> and paste in the following token:
</mj-text>
<mj-table padding="20px">
  <tr style="border:1px dashed #222;font-size:90%;text-align:left">
    <td style="padding:10px">{% raw %}{{ confirm_token }}{% endraw %}</td>
  </tr>
</mj-table>
<mj-text align="left">
  <p>Has your token expired? Request a new confirmation email by visiting this link:</p>
  <p><a href="{% raw %}{{ frontend_url('reg_resend', email=email) }}{% endraw %}">{% raw %}{{ frontend_url('reg_resend', email=email) }}{% endraw %}</a></p>
</mj-text>
{% endblock body_content %}
{% block body_secondary %}
<mj-section>
  <mj-column>
    <mj-text mj-class="header">Need Help?</mj-text>
    <mj-text>Please send feedback or bug info to 
      <a href="mailto:{% raw %}{{ site_help_mailbox }}{% endraw %}">
        {% raw %}{{ site_help_mailbox }}{% endraw %}
      </a>
    </mj-text>
  </mj-column>
</mj-section>
{% endblock body_secondary %}

{% block footer %}
<mj-text mj-class="footer">
  This message was sent to {% raw %}{{ email }}{% endraw %} by Jade Tree. If you did not request this
  email, please
  <a href="{% raw %}{{ frontend_url('reg_cancel', token=cancel_token) }}{% endraw %}">click here</a>
  to report this to the system administrators.
</mj-text>
{% endblock footer %}
